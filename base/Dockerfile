FROM ubuntu:14.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
     python-pip \
     libapr1 \
     libaprutil1 \
     libapr1-dev \
     libaprutil1-dev \
     libpcre++0 \
     libssl1.0.0 \
     libaugeas0 \
     libssl-dev \
     libffi-dev \
		 wget curl telnet dnsutils software-properties-common netcat-traditional git \
	   ca-certificates

